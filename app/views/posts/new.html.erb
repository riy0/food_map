<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">post</h1>
    <div class="form">
      <div class="form-body">
        <%= form_tag("/posts/create", {multipart: true}) do %>
          <input name="food_name" placeholder="何食べた？"></input>
          <input name="photo" type="file">
          <textarea name="content" "おすすめポイント"></textarea>
          <div class="evaluation">
            <input id="star1" name="star" type="radio" value="1">
            <label for="star1">★</label>
            <input id="star2" name="star" type="radio" value="2">
            <label for="star2">★</label>
            <input id="star3" name="star" type="radio" value="3">
            <label for="star3">★</label>
            <input id="star4" name="star" type="radio" value="4">
            <label for="star4">★</label>
            <input id="star5" name="star" type="radio" value="5">
            <label for="star5">★</label>
          </div>
          <input type="submit" value="post">
        <% end %>
      </div>
    </div>
  </div>
</div>
