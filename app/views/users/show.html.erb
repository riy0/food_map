<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= gravatar_for @user %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("edit", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>
  </div>
</div>
